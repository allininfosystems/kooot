<?php /** @var \Magenest\ProductLabel\Block\Product\View $block */ ?>
<?php if($block->isNewProduct()):?>
    <?php $newLabel = $block->getDefaultNewLabel();?>
    <span class="new-product <?php echo $newLabel->getData('product_position')?>">
        <img src="<?php echo $newLabel->getData('product_image_url')?>" alt="new label"/>
    </span>
<?php endif;?>

<?php if($block->isSale()):?>
    <?php $saleLabel = $block->getSaleLabel();?>
    <span class="sale-product <?php echo $saleLabel->getData('product_position');?>">
        <img src="<?php echo $saleLabel->getData('product_image_url')?>" alt="sale label"/>
    </span>
<?php endif;?>


